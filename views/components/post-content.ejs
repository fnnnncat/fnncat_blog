<div class="post-content">
   <a href="/posts/<%= post._id %>">
     <% if(post.param_type.length > 20){%>
         <img src="/img/type/work_type.jpg">
     <%}else{%>
     <img src="<%=post.param_type%>">
     <%}%>
   </a>
   <div class="cont">
<p>
<em class="recommend">推荐</em>
<a href="/posts/<%= post._id %>"><%= post.title %></a></p>
<div>
<%- post.contentintro %>
</div>
</div>
<div class="post-content-footer">

          <span class="tag"><%= post.creat_time?post.creat_time:post.created_at %></span>
          <span class="post-tag"><%= post.label%></span><span class="post-tag"><%= post.icon%></span>
          <span class="tag right">
            <span>浏览(<%= post.pv %>)</span>
            <span>留言(<%= post.commentsCount %>)</span>
            
            <% if (user && post.author._id && user._id.toString() === post.author._id.toString()) { %>
              <div class="ui inline dropdown">
                <div class="text"></div>
                <i class="dropdown icon"></i>
                <div class="menu">
                  <div class="item"><a href="/posts/<%= post._id %>/edit">编辑</a></div>
                  <div class="item"><a href="/posts/<%= post._id %>/remove">删除</a></div>
                </div>
              </div>
            <% } %>

          </span>

  </div>

</div>
